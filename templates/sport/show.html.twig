{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <div class="row justify_content_center">
        <table class="table col-sm-11 col-12">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for sport in sports %}
                <tr>
                    <td>{{ sport.id }}</td>
                    <td>{{ sport.label }}</td>
                    <td>
                        <a href="{{ path('sport_delete', {'id':sport.id})}}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
    </table>
    <a href="{{ path('sport_create_page') }}" class="btn btn-primary col-lg-2 col-md-3 col-sm-4 col-6 mb-2">Ajouter un sport</a>
    </div>
</div>
{% endblock body %}
