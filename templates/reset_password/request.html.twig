{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify_content_center">
        <div class="col-md-10 col-sm-11 col-12">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1>Mot de passe oublié</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrez votre adresse mail pour recevoir un lien pour changer votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-primary mb-2">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}