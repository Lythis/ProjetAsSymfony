{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row justify_content_center mb-2">
        <div class="table-responsive">
            <table class="table col-sm-11 col-12">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Nombre de places</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <th scope="row">{{ event.id }}</th>
                            <td>{{ event.name }}</td>
                            <td>{{ event.numberPlace }}</td>
                            <td>{{ event.description }}</td>
                            <td>
                                <a href="{{ path('event_edit', {'id':event.id})}}" class="btn btn-primary mb-sm-0 mb-1">Modifier</a>
                                <a href="{{ path('event_delete', {'id':event.id})}}" class="btn btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('event_create_page') }}" class="btn btn-primary col-lg-2 col-md-4 col-sm-6 col-10 m-sm-0 m-auto mb-2">Ajouter un événement</a>
    </div>
</div>
{% endblock body %}
